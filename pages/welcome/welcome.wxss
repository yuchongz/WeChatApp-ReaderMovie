page {
   height: 100%;
   background: #b3d4db;
}
.container {
    padding-top: 300rpx;  
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    align-items: center;  
}

.user-avatar {
    /* margin-top: 300rpx;   */
    width:200rpx;
    height:200rpx;
    border-radius: 100rpx;
}

.user-name {
    font-family: MicroSoft Yahei,Arial, Helvetica, sans-serif;
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 70rpx;
}

.moto-container {
    border: 1px solid #405f90;
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 5px;
    margin-top: 200rpx; 
}

.moto {
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f90;
}