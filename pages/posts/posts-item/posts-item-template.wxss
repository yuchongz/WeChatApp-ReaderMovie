.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-container:last-child {
  margin-bottom: 0;
}

.post-publish-info {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 20rpx;
}

.post-content {
  padding: 0 10px;
  margin-bottom: 10rpx;
  color: #666;
  font-size: 28rpx;
  letter-spacing: 2rpx; 
  line-height: 1.5;
}

.post-like {
  margin-left: 10px;
}

.post-like-image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 5px;
}

.post-like-count {
  color: #666;
  font-size: 25rpx;
  margin-right: 10px;
  vertical-align: middle;
}