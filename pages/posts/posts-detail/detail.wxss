.container {
  display: flex;
  flex-direction: column;
}

.post-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 175rpx;
  margin-left: -51rpx;
  opacity: .6;
}

.post-publish-info {
  margin: 20rpx 0 20rpx 20rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  margin-left: 20rpx;
  vertical-align: middle;
}
.addition-info {
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
  vertical-align: text-bottom; 
}

.post-title {
  margin-left: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.interval {
  /* position: relative;  */
  margin: 30rpx;
  height: 37.5rpx; 
  border-bottom: 1px solid #ddd;
}

.operation {
  float: right; 
  /* position: absolute;
  right: 0;
  bottom: -40rpx;   */
}

.operation image {
  margin-left: 30rpx;
  width: 75rpx;
  height: 75rpx;
}

.operation button {
  margin-left: 30rpx;
  width: 75rpx;
  height: 75rpx;
  padding: 0;
  border-radius: 50%;
}

.operation button image {
  width: 75rpx;
  height: 75rpx;
  margin: 0;
}

.post-content {
  padding: 0 30rpx;
  margin-top: 32rpx; 
  line-height: 1.5;
  letter-spacing: 2px;
}