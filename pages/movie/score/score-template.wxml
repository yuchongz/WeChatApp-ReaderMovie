<template name="score">
  <view class='score'>
    <view class='stars'>
      <block wx:for="{{stars}}" wx:for-item="i" wx:key="index">
        <image wx:if="{{i}}" src='/images/icon/star.png'></image>
        <image wx:else src='/images/icon/chat.png'></image>
      </block>
    </view>
    <text>{{movieGrade}}</text>
  </view>
</template>