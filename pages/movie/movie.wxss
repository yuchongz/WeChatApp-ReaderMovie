@import 'movie-list/movie-list-template.wxss';
@import 'movie-grid/movie-grid-template.wxss';

.all {
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
}

.search {
  display: flex;
  flex-flow: row nowrap;
  width: 100%;
  height: 80rpx;
  /* background: #f2f2f2;  *//* padding: 5rpx 10rpx; */
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search-input {
  width: 600rpx;
  height: 100%;
  margin-left: 20px;
  font-size: 28rpx;
}

.cancel {
  width: 30rpx;
  height: 30rpx;
  margin: auto 20rpx auto 0;
}

.placeholder {
  font-size: 14px;
  margin-left: 20rpx;
  color: #d1d1d1;
}

.search-result {
  background: #fff;
}
