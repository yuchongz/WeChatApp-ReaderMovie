@import '../score/score-template.wxss';

.detail-text {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  height: 250rpx;
}

.detail-basicInfo {
  position: relative;
}

.detail-imgL {
  width: 100%;
  height: 350rpx;
  -webkit-filter: blur(8px);
}

.detail-text {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  left: 40rpx;
}

.detail-imgS {
  position: absolute;
  bottom: -80rpx;
  right: 40rpx;
  width: 210rpx;
  height: 280rpx;
}

.movie-name {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
}

.country-year {
  color: #fff;
}

.like-comment {
  display: flex;
  flex-flow: row nowrap;
  color: #666;
  font-size: 22rpx;
}

.like {
  margin-right: 30rpx;
}

.count {
  color: #f21146;
}

.detailed-info-container {
  padding: 30rpx 0 60rpx 40rpx;
  border-bottom: 1px solid #bbb;
  color: #777;
}

.detailed-info-container:last-child {
  padding-bottom: 0;
  border-bottom: 0 solid #bbb;
}

.small-container {
  display: flex;
  flex-flow: row nowrap;
  margin-top: 18rpx;
}

.movie-originName {
  display: block;
  width: 450rpx;
  color: #1f3463;
  font-size: 33rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.describe-text {
  color: #999;
  margin-right: 20rpx;
}

.describe-text.score-title {
  margin-top: 8rpx;
}

.info-title {
  display: block;
  margin-bottom: 45rpx;
  color: #888;
}

.summary-content {
  line-height: 40rpx;
  letter-spacing: 1px;
}
 
.castInfo-container {
  width: 720rpx;
  white-space: nowrap;
} 

.castInfo {
  display: inline-block;
  vertical-align: top;
  margin-bottom: 40rpx;
  margin-right: 40rpx;
  width: 190rpx;
  text-align:center;
} 

.castInfo-img {
  width: 100%;
  height: 240rpx;
}

.castInfo-name {
  display: block;
  margin-top: 20rpx;
  white-space: normal;
}
